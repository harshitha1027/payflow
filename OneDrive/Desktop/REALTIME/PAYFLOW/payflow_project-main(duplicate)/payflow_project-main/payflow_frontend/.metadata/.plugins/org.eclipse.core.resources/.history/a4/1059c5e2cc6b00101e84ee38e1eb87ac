package com.example.payflow_backend.service;

import jakarta.mail.MessagingException;
import com.example.payflow_backend.model.Payroll;

import jakarta.mail.internet.MimeMessage;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.mail.javamail.MimeMessageHelper;
import org.springframework.stereotype.Service;

@Service
public class EmailService {

    @Autowired
    private JavaMailSender mailSender;

    public void sendCredentials(String to, String plainPassword) {
        String subject = "Your Temporary Login Credentials";
        String body = "Welcome!\n\nYour temporary password is: " + plainPassword +
                "\nPlease change it after logging in.";

        try {
            MimeMessage message = mailSender.createMimeMessage();
            MimeMessageHelper helper = new MimeMessageHelper(message, true);

            helper.setTo(to);
            helper.setSubject(subject);
            helper.setText(body);

            mailSender.send(message);
        } catch (MessagingException e) {
            throw new RuntimeException("Failed to send email", e);
        }
    }

    public void sendHtmlEmail(String to, String subject, String htmlBody) {
        try {
            MimeMessage message = mailSender.createMimeMessage();
            MimeMessageHelper helper = new MimeMessageHelper(message, true, "UTF-8");

            helper.setTo(to);
            helper.setSubject(subject);
            helper.setText(htmlBody, true); // ✅ 'true' enables HTML

            mailSender.send(message);
        } catch (MessagingException e) {
            throw new RuntimeException("Failed to send email", e);
        }
    }
    public void sendPayrollScheduledEmail(String to, Payroll payroll) {
        String subject = "Payroll Scheduled - PayFlow";
        String body = "<h3>Payroll Scheduled Successfully</h3>" +
                "<p>Dear Employee,</p>" +
                "<p>Your payroll for <strong>" + payroll.getMonth() + "/" + payroll.getYear() + "</strong> has been scheduled.</p>" +
                "<ul>" +
                "<li><strong>Basic Salary:</strong> ₹" + payroll.getBasicSalary() + "</li>" +
                "<li><strong>Bonuses:</strong> ₹" + payroll.getBonuses() + "</li>" +
                "<li><strong>Deductions:</strong> ₹" + payroll.getDeductions() + "</li>" +
                "<li><strong>Net Salary:</strong> ₹" + payroll.getNetSalary() + "</li>" +
                "<li><strong>Status:</strong> " + payroll.getStatus() + "</li>" +
                "</ul>" +
                "<p>Thank you,<br>PayFlow Team</p>";

        sendHtmlEmail(to, subject, body);
    }


}
